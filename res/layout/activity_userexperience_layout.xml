<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/app_background" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout style="@style/title_Bar">

        <Button
            android:id="@id/back"
            style="@style/padingstyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/com_navbar_btn_back_selector"
            android:onClick="onBack" />

        <TextView android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/experience" android:layout_centerVertical="true" style="@style/app_title_text" />
    </RelativeLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <com.leelistview.view.LeeListView android:id="@id/my_listview" android:layout_width="fill_parent" android:layout_height="fill_parent" android:listSelector="@drawable/com_transparentbutton_selector" android:cacheColorHint="#00000000" />
    </RelativeLayout>
</LinearLayout>
